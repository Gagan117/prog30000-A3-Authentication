@{
}

@model IEnumerable<gaganvirAssignment3.Models.Order>

<h1>Order History</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Order Date</th>
            <th>Total Amount</th>
            <th>Products</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderId</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>
                    <ul>
                        @foreach (var product in order.Products)
                        {
                            <li>@product.Name - @product.Price.ToString("C")</li>
                        }
                    </ul>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-controller="Customer" asp-action="Index" class="btn btn-secondary">Back to Products</a>